let node ff () returns (o)
  forward(2) returns (o init last o)
    do o = last o + 1 until o >= 42 done

let node ff () returns (o)
  forward(2) returns (o)
    do o = last o + 1 until o >= 42
    with init o = last o and default o = 42

let node ff () returns (o)
  o = forward(2) returns (o init 0)
    do o = last o + 1 done

let node ff () returns (o)
  o = forward(2) returns (o)
      do o = last o + 1 with init o = 0 done

let node ff () returns (o)
  forward(2) returns (o)
    do o = last o + 1 done
