name: Build

on:
  - push
  - pull_request
  - workflow_dispatch
    
jobs:
  build:
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
     
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install OCaml dependencies
        run: opam install -y graphics menhir alcotest

      - name: Test examples 
        run: |
          cd tests
          dune test
